{
  "$id": "http://registry.appfibre.org/schema/jst.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema for jst templates",
  "type": "object",
    "patternProperties": {
      "^$": {"$ref": "#/properties"},
      "^[^$]": {"$ref": "#/definitions/props"}
    },
    "properties": {
      "$id": { "type": "string" }, 
      "$schema": { "anyOf" : [ { "type": "string" }, {"$ref": "http://json-schema.org/draft-07/schema#"} ] },
      "$html": { "$ref": "http://registry.appfibre.org/schema/html.json#/properties/$html"}, 
      "$require": { "$ref": "http://registry.appfibre.org/schema/require.json#/properties/$require" }
    }
    , "definitions": {
      "props": {
        "anyOf": [
            {"type": "array", "items": [ {"$ref": "#"}] } 
          , {"type": "boolean"}
          , {"type": "integer"}
          , {"type": "null"}
          , {"type": "number"}
          , {"type": "object", "$ref": "#" }  
        ]
      } 
    },
    "additionalProperties": false
  }  
